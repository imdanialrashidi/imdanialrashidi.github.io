---
interface Props {
  href: string;
  title: string;
  summary: string;
  tags: string[];
  date: Date;
  status: 'done' | 'in-progress' | 'planned';
}

const { href, title, summary, tags, date, status } = Astro.props;
const formattedDate = new Intl.DateTimeFormat('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
}).format(date);

const statusLabel = status === 'done' ? 'Done' : status === 'in-progress' ? 'In Progress' : 'Planned';
---

<article class="glass card">
  <div class="mb-3 flex items-center justify-between gap-3">
    <h3 class="text-lg font-medium tracking-tight text-text">{title}</h3>
    <div class="flex items-center gap-2">
      <span class:list={['status-badge', `status-${status}`]}>{statusLabel}</span>
      <time class="text-xs text-muted" datetime={date.toISOString()}>{formattedDate}</time>
    </div>
  </div>
  <p class="text-sm text-muted md:text-base">{summary}</p>
  <ul class="mt-4 flex flex-wrap gap-2">
    {tags.map((tag) => <li class="chip">{tag}</li>)}
  </ul>
  <a href={href} class="mt-5 inline-flex text-sm font-medium text-text">View details â†’</a>
</article>
